{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test-setup.js"],
  "verbose": true,
  "collectCoverage": false,
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": ["text", "lcov", "html"],
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/main.ts"
  ],
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
